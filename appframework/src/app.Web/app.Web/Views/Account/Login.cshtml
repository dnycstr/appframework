@model LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}

<div class="login">
    <div>
        <div class="login_wrapper">
            <div class="animate form login_form">

                <div class="panel panel-green">
                    <div class="panel-heading" style="min-height: 72px">

                        <i class="fa fa-lock fa-4x pull-left"></i>

                        <h3 class="pull-left">DSC App v1.0</h3>
                        <h4 class="text-right text-capitalize">Application Framework </h4>
                    </div>
                    <div class="panel-body">

                        <div class="row">
                            <div class="col-lg-12">

                                <partial name="_ValidationSummary" />

                            </div>
                        </div>


                        <form asp-route="Login">
                            <input type="hidden" asp-for="ReturnUrl" />

                            @Html.AntiForgeryToken()
                            <br />
                            <fieldset>
                                <div class="form-group">
                                    <div class="row">
                                        <label asp-for="Username" class="col-md-2 control-label"></label>
                                        <div class="col-md-10">
                                            <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label asp-for="Password" class="col-md-2 control-label"></label>
                                        <div class="col-md-10">
                                            <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                                        </div>
                                    </div>
                                </div>
                                @if (Model.AllowRememberLogin)
                                {
                                    <div class="form-group login-remember">
                                        <label asp-for="RememberLogin">
                                            <input asp-for="RememberLogin">
                                            <strong>Remember My Login</strong>
                                        </label>
                                    </div>
                                }
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-offset-10 col-md-10">
                                            <input type="submit" value="Log in" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                            </fieldset>                           
                        </form>


                       
                    </div>
                    <div class="panel-footer">
                        &copy; @DateTime.Now.Year - DSC
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

@section Scripts {
   
    <script type="text/javascript">
        $(".validation-summary-errors").removeClass("validation-summary-errors");
    </script>

}


