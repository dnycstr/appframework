@model app.Infra.Models.Manage.UserAccountUpdateViewModel
<form asp-controller="Manage" asp-action="UpdateUserAccountPartial"
      data-ajax="true" data-ajax-method="POST"
      data-ajax-mode="replace" data-ajax-update="#my-modal-lg-form-container"
      data-ajax-begin="return blockOnFormSubmit()"
      data-ajax-complete="return unblockOnFormComplete()"
      class="form-horizontal form-label-left">

    <div class="row">
        <div class="col-lg-12">

            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-lg-12">

                    @if ((ViewBag.HttpMethod == "POST") && (ViewData.ModelState.Any(x => x.Value.Errors.Any())))
                    {
                        <div class="alert alert-danger">
                            <a href="#" class="close" data-dismiss="alert">×</a>
                            <h4>Validation Errors</h4>
                            @Html.ValidationSummary()
                        </div>
                    }

                </div>
            </div>

            <div class="row">

                <div class="col-lg-offset-1 col-lg-4">

                    <h4>Login details</h4>
                    <hr />

                    @Html.HiddenFor(o => o.UserId)

                <div class="form-group">

                    <label>Username :</label>
                    @Html.TextBoxFor(o => o.Username, new { @class = "form-control", @readonly = "readonly" })

                    <br />

                    <label>Email :</label>
                    @Html.TextBoxFor(o => o.Email, new { @class = "form-control", placeholder = "Enter email" })


                </div>

                    <div class="form-group">
                        <label>Status :</label>

                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(o => o.IsActive) Is Active
                            </label>
                        </div>

                    </div>

                </div>

            </div>

            <div class="ln_solid"></div>
            <div class="row">
                <div class="col-lg-12">

                    <input type="submit" class="btn btn-outline btn-danger" value="Delete" name="command" />

                    <div class="pull-right">
                        <a href="#" data-dismiss="modal" class="btn btn-outline btn-primary"> Cancel </a>
                        <input type="submit" class="btn btn-outline btn-success" value="Update" name="command" />
                    </div>
                </div>
            </div>

        </div>
    </div>

</form>




