@model app.Infra.Models.Manage.UserAccountNewViewModel
    <form asp-controller="Manage" asp-action="NewUserAccountPartial"
          data-ajax="true" data-ajax-method="POST"
          data-ajax-mode="replace" data-ajax-update="#my-modal-lg-form-container"
          data-ajax-begin="return blockOnFormSubmit()"
          data-ajax-complete="return unblockOnFormComplete()"
          class="form-horizontal form-label-left">
                
        <div class="row">
            <div class="col-lg-12">

                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-lg-12">

                        @if ((ViewBag.HttpMethod == "POST") && (ViewData.ModelState.Any(x => x.Value.Errors.Any())))
                        {
                            <div class="alert alert-danger">
                                <a href="#" class="close" data-dismiss="alert">×</a>
                                <h4>Validation Errors</h4>
                                @Html.ValidationSummary()
                            </div>
                        }

                    </div>
                </div>

                <div class="row">

                    <div class="col-lg-offset-1 col-lg-4">

                        <h4>Login details</h4>
                        <hr />

                        <div class="form-group">

                            <label>Username :</label>
                            @Html.TextBoxFor(o => o.Username, new { @class = "form-control", placeholder = "Enter username" })

                            <br />

                            <label>Email :</label>
                            @Html.TextBoxFor(o => o.Email, new { @class = "form-control", placeholder = "Enter email" })

                            <br />

                            <label>Password :</label>
                            @Html.PasswordFor(o => o.Password, new { @class = "form-control", placeholder = "Enter password" })

                            <br />

                            <label>Confirm Password :</label>
                            @Html.PasswordFor(o => o.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm password" })

                        </div>                      

                    </div>
                                      
                </div>
                               
                <div class="ln_solid"></div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="pull-right">
                            <a href="#" data-dismiss="modal" class="btn btn-outline btn-primary"> Cancel </a>
                            <input type="submit" class="btn btn-outline btn-success" value="Save" />
                        </div>
                    </div>
                </div>

            </div>
        </div>
        
    </form>




