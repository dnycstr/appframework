@model app.Infra.Models.Contacts.ContactNewViewModel


    <form asp-controller="Contact" asp-action="NewContactPartial"
          data-ajax="true" data-ajax-method="POST"
          data-ajax-mode="replace" data-ajax-update="#my-modal-lg-form-container"
          data-ajax-begin="return blockOnFormSubmit()"
          data-ajax-complete="return unblockOnFormComplete()"
          class="form-horizontal form-label-left">

        <div class="row">
            <div class="col-lg-12">

                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-lg-12">
                        @if ((ViewBag.HttpMethod == "POST") && (ViewData.ModelState.Any(x => x.Value.Errors.Any()) || !Model.IsSuccess))
                        {
                            <div class="alert alert-danger">
                                <a href="#" class="close" data-dismiss="alert">×</a>
                                <h4>Validation Errors</h4>
                                @Html.ValidationSummary()

                                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                                {
                                    <span>@Model.ErrorMessage</span>
                                }

                            </div>
                        }

                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6">

                        <div class="form-group">
                            <label>Firstname :</label>
                            @Html.TextBoxFor(o => o.Firstname,
                                new { @class = "form-control", placeholder = "Enter firstname" })
                        </div>

                        <div class="form-group">
                            <label>Middlename :</label>
                            @Html.TextBoxFor(o => o.Middlename,
                                new { @class = "form-control", placeholder = "Enter middlename" })
                        </div>

                        <div class="form-group">
                            <label>Lastname :</label>
                            @Html.TextBoxFor(o => o.Lastname,
                                new { @class = "form-control", placeholder = "Enter lastname" })
                        </div>
                                              
                    </div>
                    <div class="col-lg-6">
                        @*<div class="form-group">
                            <label>Organization :</label>
                            <div class="form-group input-group">
                                <span class="input-group-btn"><button class="btn btn-default" type="button">&nbsp;</button></span>
                                @Html.DropDownListFor(o => o.OrganizationId,
                                    Model.Organizations,
                                    "Select organization",
                                    new { @class = "form-control chosen-select", id = "ddl-select-organization" })
                            </div>
                        </div>*@
                        <div class="form-group">
                            <label>Position :</label>
                            @Html.TextBoxFor(o => o.Position,
                                new { @class = "form-control", placeholder = "Enter position" })
                        </div>

                        <div class="form-group">
                            <label>Email :</label>
                            @Html.TextBoxFor(o => o.Email,
                                new { @class = "form-control", placeholder = "Enter email" })
                        </div>

                        <div class="form-group">
                            <label>Telephone :</label>
                            @Html.TextBoxFor(o => o.TelephoneNumber,
                                new { @class = "form-control", placeholder = "Enter telephone" })
                        </div>
                        <div class="form-group">
                            <label>Mobile :</label>
                            @Html.TextBoxFor(o => o.MobileNumber,
                                new { @class = "form-control", placeholder = "Enter mobile" })
                        </div>

                    </div>
                </div>


                <div class="ln_solid"></div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="pull-right">
                            <a href="#" data-dismiss="modal" class="btn btn-outline btn-primary"> Cancel </a>
                            <input type="submit" class="btn btn-outline btn-success" value="Save" />
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </form>



    @section scripts
{
          

        <script type="text/javascript">

        </script>
    }
