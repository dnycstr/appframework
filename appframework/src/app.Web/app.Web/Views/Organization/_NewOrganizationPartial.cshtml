
@model app.Infra.Models.Organizations.OrganizationNewViewModel

    <form asp-controller="Organization" asp-action="NewOrganizationPartial"
          data-ajax="true" data-ajax-method="POST"
          data-ajax-mode="replace" data-ajax-update="#my-modal-lg-form-container"
          data-ajax-begin="return blockOnFormSubmit()"
          data-ajax-complete="return unblockOnFormComplete()"
          class="form-horizontal form-label-left">


        <div class="row">
            <div class="col-lg-12">

                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-lg-12">
                        @if ((ViewBag.HttpMethod == "POST") && (ViewData.ModelState.Any(x => x.Value.Errors.Any()) || !Model.IsSuccess))
                        {
                            <div class="alert alert-danger">
                                <a href="#" class="close" data-dismiss="alert">×</a>
                                <h4>Validation Errors</h4>
                                @Html.ValidationSummary()

                                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                                {
                                    <span>@Model.ErrorMessage</span>
                                }

                            </div>
                        }

                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6">

                        <div class="form-group">
                            <label>Name :</label>
                            @Html.TextBoxFor(o => o.Name,
                                new { @class = "form-control", placeholder = "Enter name" })
                        </div>

                        <div class="form-group">
                            <label>Business Description :</label>
                            @Html.TextBoxFor(o => o.Description,
                                new { @class = "form-control", placeholder = "Enter description" })
                        </div>
                                             

                        <div class="form-group">
                            <label>Address 1 :</label>
                            @Html.TextBoxFor(o => o.Address1,
                                new { @class = "form-control", placeholder = "Enter address 1" })
                        </div>

                        <div class="form-group">
                            <label>Address 2 :</label>
                            @Html.TextBoxFor(o => o.Address2,
                                new { @class = "form-control", placeholder = "Enter address 2" })
                        </div>

                        <div class="form-group">
                            <label>City :</label>
                            @Html.TextBoxFor(o => o.AddressCity,
                                new { @class = "form-control", placeholder = "Enter city" })
                        </div>

                        <div class="form-group">
                            <label>Province :</label>
                            @Html.TextBoxFor(o => o.AddressProvince,
                                new { @class = "form-control", placeholder = "Enter province" })
                        </div>

                    </div>
                    <div class="col-lg-6">

                        <div class="form-group">
                            <label>Telephone :</label>
                            @Html.TextBoxFor(o => o.TelephoneNumber,
                                new { @class = "form-control", placeholder = "Enter telephone" })
                        </div>
                        <div class="form-group">
                            <label>Mobile :</label>
                            @Html.TextBoxFor(o => o.MobileNumber,
                                new { @class = "form-control", placeholder = "Enter mobile" })
                        </div>
                        <div class="form-group">
                            <label>Email :</label>
                            @Html.TextBoxFor(o => o.Email,
                                new { @class = "form-control", placeholder = "Enter email" })
                        </div>
                        <div class="form-group">
                            <label>Website :</label>
                            @Html.TextBoxFor(o => o.Website,
                                new { @class = "form-control", placeholder = "Enter website" })
                        </div>
                    </div>
                </div>


                <div class="ln_solid"></div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="pull-right">
                            <a href="#" data-dismiss="modal" class="btn btn-outline btn-primary"> Cancel </a>
                            <input type="submit" class="btn btn-outline btn-success" value="Save" />
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </form>


@section scripts
{
    <script type="text/javascript">

    </script>
}